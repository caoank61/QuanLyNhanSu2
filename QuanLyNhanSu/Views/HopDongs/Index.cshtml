@model IEnumerable<QuanLyNhanSu.Models.HopDong>

@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2 class="text-center">Danh Sách Hợp Đồng</h2>

<div class="form-group row">
    <div class="col-md-1">
        <a href="@Url.Action("Create","HopDongs")" class="btn btn-outline-success btn-sm">Thêm mới</a>
    </div>
</div>
<table class="table table-dark table-hover table-bordered text-center table-striped">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.IdHD)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.LoaiHD)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.TuNgay)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.DenNgay)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.NhanVien.HoTen)
        </th>
        <th>
            Thao Tác
        </th>
    </tr>

    @foreach (var item in Model)
    {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.IdHD)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.LoaiHD)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.TuNgay)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.DenNgay)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.NhanVien.HoTen)
            </td>
            <td>
                <a href="@Url.Action("Details", "HopDongs", new { id = item.IdHD })" class="btn btn-success btn-sm" data-toggle="tooltip" data-placement="bottom" title="Chi Tiết"><i class="fa fa-book"></i></a>
                <a href="@Url.Action("Edit", "HopDongs", new { id = item.IdHD })" class="btn btn-primary btn-sm" data-toggle="tooltip" data-placement="bottom" title="Chỉnh Sửa"><i class="fas fa-pen"></i></a>
                <a href="@Url.Action("Delete", "HopDongs", new { id = item.IdHD })" class="btn btn-danger btn-sm" data-toggle="tooltip" data-placement="bottom" title="Xóa"><i class="far fa-trash-alt"></i></a>
            </td>
        </tr>
    }

</table>
